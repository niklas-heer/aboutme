body, html
  font-family 'Raleway', sans-serif
  bg-image: $_BGImage
  background-size cover
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  z-index 9

.me
  position absolute
  height 100%
  width 100%
  background rgba(42, 43, 57, 0.7)

p
  padding 0
  margin 0
  display inline-block

a
  color $_SecondaryColor
  text-decoration none
  transition all 0.2s ease-in-out
  &:hover
    color $_PrimaryColor

.card
  height 360px
  width 428px
  overflow hidden
  box-shadow 0px 0px 43px -10px black
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  .flip
    transition all 0.5s ease
  .front
    z-index 11
    width 100%
    position absolute
    height 100%
    background #fff
    box-shadow 0px 0px 33px -1px rgba(0, 0, 0, 0.45)
    transform scale(1, 1)
    transition all 0.6s ease
    .top
      height 56%
      background $_HeaderColor
      &:after
        position absolute
        content ''
        pointer-events none
        left 50%
        width 2em
        height 2em
        transform translateX(-50%) rotate(45deg)
        bottom 9em
        z-index 10
        background inherit
      .logo
        display inline-block
        color #fff
        z-index 11
        position relative
        pointer-events none
        transform translateX(-50%)
        left 50%
        margin-top .2em
        font-size 4em
        img
          height 2.8em
          border-radius 150px
          transition transform .7s ease-in-out
          box-shadow 0 0 8px rgba(0, 0, 0, .8)

    .nametroduction
      margin-top 2.4em
      transform translateY(0)
      z-index 8
    .name
      color $_SecondaryColor
      font-weight 400
      font-size 3.2em
      text-align center
      position relative
      margin-bottom .35em
      &:after
        content ''
        position absolute
        top 1.3em
        width 20%
        left 40%
        right 40%
        height 1px
        background $_SecondaryColor
    .introduction
      text-align center
      color $_SecondaryColor
      font-family: 'Raleway', sans-serif;

    .contact
      color $_SecondaryColor
      margin-left 1.7em
      font-weight 300
      font-size 1.6em
      transform translateY(400%)
      span
        color #2D3244
        font-size 1.7em
        width 1.3em
        display inline-block
      p
        position relative
        bottom .24em
  .back
    width 100%
    height 100%
    background #fff
    backface-visibility hidden
    position absolute

.tooltip
  position absolute
  left 1em
  bottom 1em
  color #fff
  font-weight 300
  padding .4em
  background $_PrimaryColor

.front .top .logo, .front .top, .front .top:after, .front .nametroduction, .front .contact
  transition all 0.7s ease-in-out

.flip
